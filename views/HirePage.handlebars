<!-- FORM -->

        <div class="container">
          <form action="/hiresubmit">
  
          <h3>Hire Me</h3>
    
          <label for="fname">Name </label>
          <input type="text" id="fname" placeholder="Micheal Hunt" required>

          <label for="lname">Activity</label>
          <input type="text" id="lname" placeholder="Tennis" required>

          <label for="subject">Message</label>
          <textarea id="subject" name="subject" placeholder="Tell us about yourself!" style="height:150px"></textarea>

          <h3>Payment</h3>

          <label for="skill">Payment Type</label>
          <select id="activity" >
            <option value="art"> Visa </option>
            <option value="australia">Chase</option>
            <option value="canada">Mastercard</option>
          </select>

          <label for="lname">Name on Card</label>
          <input type="text" id="lname" placeholder="Micheal Hunt" required>

          <label for="lname">Card Number</label>
          <input type="text" id="lname" placeholder="1234-5678-9123-4567" required>

          <label for="fname">Expiration Date </label>
          <input type="text" id="fname" placeholder="00/00" required>

          <label>CVC/CVV </label>
          <input type="text" id="fname" required>

          <input type="submit" value="Submit" href="/hiresubmit">

          </form>
        </div>


