<body>

<!-- NAVIGATION BAR AT THE TOP -->
   
        <nav>
        <div id="logo"> </div>

        <div class="logo"><img src = ></div>

        <label for="drop" class="toggle">Menu</label>
        <input type="checkbox" id="drop" />
            <ul class="menu">
                <li><a href="/home">Home</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="#">History</a></li>
                <li><a href="/help">Help</a></li>
            </ul>
        </nav>


	<div class ="header"> Become a Tutor </div>

  <div class = "card">
      <div class = "Teach">
      <form id="addTeacherForm" role="form" method="get" action="/hiresubmit">
    <div> 
    <div style="font-size:40px;" class = "form-group">
      <div class = "col-75">
      <label class = "dropdown" for="skill">Choose a skill: </label>
    <select style="font-size:25px;" name="Skills">
      <option >Tennis</option>
      <option >Surfing</option>
      <option >Piano</option>
      <option >Spanish</option>
      <option >Coding</option>
      <option >Dance</option>
      <option >Photography</option>
      <option >Other</option>
    </select>
  </div>
</div>
    <div class = "col-25">
    <label for="skill">If other: </label>
    <input type ="text" class="form-control" id="skill" placeholder="n/a" skill="skill">
    </div>
  </div>
  <div>
	<div class="form-group">
    <div class = "col-75">
	  <label for="address">Practice Location: </label>
	  <input type="text" class="form-control" id="address" placeholder="Address to meet" address="address" required>
	  </div>
  </div>
</div>
<div>
	  <div class="form-group">
      <div class="col-75">
	   <label for="description">Bio: </label>
	    <textarea class="text" type="text" class="form-control" id="description" placeholder="Tell us about yourself!" description="description" style="height:200px"></textarea>
	    </div>
    </div>
  </div>
  <div>
	   <div class="form-group">
      <div class="col-75">
	   <label for="rate"> Rate per hour: </label>
	   <input type="text" class="form-control" id="rate" placeholder="Rate in USD/hour" rate="rate" required>
	   </div>
   </div>
   </div>

  
	</form>

</div>
</div>

    <div class = "buttonForm">
          <a href= "/submit" class="click">Submit</a>
    </div>
	
