    border-radius: 24px;
    border: 2px solid #f1c40f;
    background-color:black;
  }

  a{
    text-decoration: none;
    color:white;
  }

  input[type=submit] {
    background-color: #023160;
    color: white;
    padding: 20px 25px;
    border: 2px solid #2ecc71;
    border-radius: 4px;
    cursor: pointer;
    border-radius:25px;
    top-margin:30px;
  }

  input[type=submit]:hover {
    background-color: #2ecc71;
  }

  .container {
    border-radius: 5px;
    background-color: black;
    padding: 20px;
    width: 60%;
    position: absolute;
    left: 20%;
    right: 20%;
    top: 10%;
    font-size: 30px;
    font-weight: bold;
    border-radius:25px;
  }
</style>

